<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutWater"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.valuesFragments.waterValues.WaterValuesFragment"
    android:background="@drawable/waterdrop">

    <TextView
        android:id="@+id/tvWaterMeasure"
        android:layout_width="300dp"
        android:layout_height="133dp"
        android:layout_marginTop="132dp"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWaterValue" />

    <TextView
        android:id="@+id/tvWaterValue"
        android:layout_width="234dp"
        android:layout_height="117dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="156dp"
        android:textColor="@color/colorAccent"
        android:textSize="90sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTittle" />

    <ImageView
        android:id="@+id/imSemWater"
        android:layout_width="wrap_content"
        android:layout_height="285dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toStartOf="@+id/tvWaterValue"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTittle"
        android:layout_width="389dp"
        android:layout_height="107dp"
        android:layout_marginTop="56dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.795"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>